{
  "kind": "collectionType",
  "collectionName": "people",
  "info": {
    "name": "Person",
    "description": "A person (alive, dead, undead, or fictional)."
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "alternateName": {
      "type": "string"
    },
    "birthDate": {
      "type": "date"
    },
    "deathDate": {
      "type": "date"
    },
    "email": {
      "type": "email"
    },
    "telephone": {
      "type": "string"
    },
    "jobTitle": {
      "type": "string"
    },
    "gender": {
      "type": "string"
    },
    "nationality": {
      "type": "string"
    },
    "address": {
      "type": "json"
    },
    "affiliation": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::organization.organization"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "sameAs": {
      "type": "string"
    },
    "url": {
      "type": "string"
    }
  }
}
