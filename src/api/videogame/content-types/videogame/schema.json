{
  "kind": "collectionType",
  "collectionName": "videogames",
  "info": {
    "name": "Video Game",
    "description": "A video game."
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "genre": {
      "type": "string"
    },
    "platform": {
      "type": "string"
    },
    "gameMode": {
      "type": "string"
    },
    "gameplayMode": {
      "type": "string"
    },
    "releaseDate": {
      "type": "date"
    },
    "developer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::organization.organization"
    },
    "publisher": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::organization.organization"
    },
    "trailer": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::videoobject.videoobject"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "sameAs": {
      "type": "string"
    },
    "aggregateRating": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::aggregaterating.aggregaterating"
    },
    "review": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review"
    }
  }
}
