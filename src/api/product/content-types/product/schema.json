{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": "A product that is offered for sale."
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "sku": {
      "type": "string"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::organization.organization"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "offers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::offer.offer"
    },
    "category": {
      "type": "string"
    },
    "price": {
      "type": "float"
    },
    "productID": {
      "type": "string"
    },
    "releaseDate": {
      "type": "date"
    }
  }
}
